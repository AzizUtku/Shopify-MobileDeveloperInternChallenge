<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/start_rlt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_start_screen"
    android:fitsSystemWindows="true"
    tools:context=".StartActivity">


    <ImageView
        android:id="@+id/start_img_logo"
        android:layout_width="230dp"
        android:layout_height="108dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        app:srcCompat="@drawable/ic_shopify"
        android:contentDescription="@string/cd_shopify_logo"/>

    <TextView
        android:id="@+id/start_txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_img_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="serif"
        android:text="@string/start_title"
        android:textColor="#fff"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/start_txt_developer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_txt_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:fontFamily="serif"
        android:text="@string/developer_name"
        android:textColor="#fff"
        android:textSize="16sp" />

    <ProgressBar
        android:id="@+id/start_pb"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_txt_developer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />


</RelativeLayout>